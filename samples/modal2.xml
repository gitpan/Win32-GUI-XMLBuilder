<GUI>
	<Window name='W1'
		dim='100, 100, 200, 80'
		title='Window 1'
	>
		<Button
			text='Open modal window...'
			dim='20, $self->{W1}->Height-70, 150, 20'
			onClick='sub { $self->{W1}->Disable; $self->{W2}->Show; }'
		/>

		<Window name='W2'
			dim='350, 100, 200, 80'
			title='Window 2'
			show='0'
			onTerminate='sub { $self->{W2}->Hide; $self->{W1}->Enable; $self->{W1}->BringWindowToTop; return 0; }'
		>
			<Label text='Window 2'/>
		</Window>
	</Window>
</GUI>
